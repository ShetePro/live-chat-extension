{
  "name": "Live Chat Extension",
  "description": "in live stream record chats",
  "version": "1.0",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": ["/src/*", "assets/*"],
      "matches": ["https://live.bilibili.com/*", "https://www.huya.com/*", "https://www.douyu.com/*", "https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "32": "public/logo_32.png",
    "48": "public/logo_48.png",
    "128": "public/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/logo.png",
    "default_title": "Live Chat Extension"
  },
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://live.bilibili.com/*"],
      "type": "module",
      "js": ["src/content/live/bilibili.ts"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.huya.com/*"],
      "type": "module",
      "js": ["src/content/live/huya.ts"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.douyu.com/*"],
      "type": "module",
      "js": ["src/content/live/douyu.ts"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.youtube.com/watch*"],
      "type": "module",
      "js": ["src/content/live/youtube.ts"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.twitch.tv/*"],
      "type": "module",
      "js": ["src/content/live/twitch.ts"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "declarativeContent", "tabs"]
}
